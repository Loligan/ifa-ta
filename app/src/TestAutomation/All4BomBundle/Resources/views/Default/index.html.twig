{% extends "@TestAutomationAll4Bom/base-ta.html.twig" %}
{% block body %}

    <table class="ui selectable celled table">
        <thead>
        <tr>
            <th>Feature</th>
            <th>Tags</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for feature in features %}
            <tr>
                <td>{{ feature.feature }}</td>
                <td>{{ feature.tags }}</td>
                <td>

                    <a class="ui blue basic small  button" href="{{ path('test_automation_all4_bom_view_scenarios',{'feature':feature.id}) }}">View scenarios ({{ feature.count_s }})</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}