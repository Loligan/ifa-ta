{% trans_default_domain 'FOSUserBundle' %}
{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="ui form">
    <div class="three centered fields">
        <div class="field"></div>
    <div class="field">
        <h1 style="text-align: center" class="ui header">Login</h1>
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
    {% endif %}
    <div class="field">
        <div class="ui icon input">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"/>
            <i class="user icon"></i>
        </div>
    </div>
    <div class="field">
        <div class="ui icon input">
            <input type="password" id="password" name="_password" required="required"/>
            <i class="keyboard icon"></i>
        </div>
    </div>
    <div class="field">
        <div class="ui checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
            <label>Remember me</label>
        </div>
    </div>

    <div class="field">
        <input class="ui basic button" type="submit" id="_submit" name="_submit" value="Login"/>
    </div>
    </div>
        <div class="field"></div>
    </div>
</form>

